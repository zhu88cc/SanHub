{
  "extends": ["next/core-web-vitals"],
  "rules": {
    "no-console": ["warn", { 
      "allow": ["warn", "error"] 
    }],
    "prefer-const": "warn",
    "no-var": "error",
    "eqeqeq": ["warn", "always", { "null": "ignore" }],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "out/",
    "public/",
    "*.config.js"
  ]
}
